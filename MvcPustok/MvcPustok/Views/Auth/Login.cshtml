@model MemberLoginViewModel
@{
	ViewBag.Title = "Login";
}
<section class="breadcrumb-section">
	<h2 class="sr-only">Site Breadcrumb</h2>
	<div class="container">
		<div class="breadcrumb-contents">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a asp-action="index" asp-controller="home">Home</a></li>
					<li class="breadcrumb-item active">@ViewBag.Title</li>
				</ol>
			</nav>
		</div>
	</div>
</section>
<!--=============================================
=            Login page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-12 col-lg-6 mx-auto col-xs-12">
				<form method="post">
					<div class="login-form">
						<h4 class="login-title">Returning Customer</h4>
						<div class="row">
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="UserName">UserName</label>
								<input class="mb-0 form-control" asp-for="UserName" id="UserName"
											 placeholder="UserName">
								<span class="text-danger" asp-validation-for="UserName"></span>
							</div>
							<div class="col-12 mb--20">
								<label asp-for="Password">Password</label>
								<input class="mb-0 form-control" asp-for="Password" id="Password" placeholder="Password">
								<span class="text-danger" asp-validation-for="Password"></span>
							</div>
							<div class="col-12 mb--20">
								<div class="d-flex align-items-center">
									<input asp-for="RememberMe" id="RememberMe">
									<label asp-for="RememberMe" class="mb-0">RememberMe</label>
								</div>
							</div>
							<div class="col-md-6 mb-3">
								<a asp-action="forgetPassword">Forgot Your Password?</a>
							</div>
							<div class=" col-md-12 text-danger" asp-validation-summary="ModelOnly"></div>
							<div class="col-md-12">
								<button type="submit" class="btn btn-outlined">@ViewBag.Title</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</main>
